generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("PRISMA_DATABASE_URL")
}

model Articles {
  ArticleID          Int           @id @default(autoincrement())
  Title              String        @db.VarChar(255)
  StorageArticleUUID String        @unique(map: "StorageArticleUUID") @db.VarChar(255)
  Active             Boolean       @default(true)
  PdfFileSummary     String        @db.Text
  Diagram            Diagram?
  UserArticle        UserArticle[]
}

model Diagram {
  ArticleID          Int      @unique(map: "ArticleID")
  StorageDiagramUUID String   @unique(map: "StorageDiagramName") @db.VarChar(255)
  Active             Boolean  @default(true)
  Articles           Articles @relation(fields: [ArticleID], references: [ArticleID], onDelete: Cascade, onUpdate: NoAction, map: "Diagram_ibfk_1")
}

model UserArticle {
  UserID    Int
  ArticleID Int
  Users     Users    @relation(fields: [UserID], references: [UserID], onDelete: Cascade, onUpdate: NoAction, map: "UserArticle_ibfk_1")
  Articles  Articles @relation(fields: [ArticleID], references: [ArticleID], onDelete: Cascade, onUpdate: NoAction, map: "UserArticle_ibfk_2")

  @@id([UserID, ArticleID])
  @@index([ArticleID], map: "ArticleID")
}

model Users {
  UserID         Int           @id @default(autoincrement())
  FirstName      String        @db.VarChar(50)
  LastName       String        @db.VarChar(50)
  Email          String        @unique(map: "Email") @db.VarChar(50)
  HashedPassword String        @db.Char(60)
  Salt           String        @db.Char(60)
  Active         Boolean       @default(true)
  UserArticle    UserArticle[]
}
